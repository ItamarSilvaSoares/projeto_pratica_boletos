{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": "standard-with-typescript",
    "overrides": [],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
        "project": "./tsconfig.json"
    },
    "rules": {
        "semi": [
            1,
            "always"
        ],
        "@typescript-eslint/semi": "off",
        "@typescript-eslint/no-misused-promises": "off",
        "@typescript-eslint/space-before-function-paren": "off"
    }
}